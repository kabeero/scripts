{
  "description": "Change hyper-(m,<,>) to (play, volume) keys",
  "manipulators": [
    {
      "from": {
        "key_code": "m",
        "modifiers": {
          "mandatory": [
            "left_command",
            "left_option",
            "left_control",
            "left_shift"
          ],
          "optional": ["any"]
        }
      },
      "to": [{ "key_code": "play_or_pause" }],
      "type": "basic"
    },
    {
      "from": {
        "key_code": "comma",
        "modifiers": {
          "mandatory": [
            "left_command",
            "left_option",
            "left_control",
            "left_shift"
          ],
          "optional": ["any"]
        }
      },
      "to": [{ "key_code": "volume_down" }],
      "type": "basic"
    },
    {
      "from": {
        "key_code": "period",
        "modifiers": {
          "mandatory": [
            "left_command",
            "left_option",
            "left_control",
            "left_shift"
          ],
          "optional": ["any"]
        }
      },
      "to": [{ "key_code": "volume_up" }],
      "type": "basic"
    }
  ]
}
